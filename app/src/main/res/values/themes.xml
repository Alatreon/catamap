<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Thème principal en mode sombre -->
    <style name="Theme.CataMap" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Couleurs primaires : Gris foncé -->
        <item name="colorPrimary">#2C2C2C</item>
        <item name="colorPrimaryVariant">#1A1A1A</item>
        <item name="colorOnPrimary">#FAFAFA</item>

        <!-- Couleurs secondaires/accent : Gris bleuté -->
        <item name="colorSecondary">#78909C</item>
        <item name="colorSecondaryVariant">#546E7A</item>
        <item name="colorOnSecondary">#FAFAFA</item>

        <!-- Couleurs des surfaces : Fond sombre -->
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#E0E0E0</item>

        <!-- Fond général -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorOnBackground">#E0E0E0</item>

        <!-- Statut bar et navigation bar -->
        <item name="android:statusBarColor">#1A1A1A</item>
        <item name="android:navigationBarColor">#1A1A1A</item>

        <!-- Style des fenêtres -->
        <item name="android:windowBackground">#121212</item>

        <!-- Textes -->
        <item name="android:textColorPrimary">#E0E0E0</item>
        <item name="android:textColorSecondary">#B0B0B0</item>

        <!-- Boutons -->
        <item name="materialButtonStyle">@style/Widget.CataMap.Button</item>

        <!-- Dividers -->
        <item name="android:listDivider">@color/divider_dark</item>
    </style>

    <!-- Style des boutons en mode sombre -->
    <style name="Widget.CataMap.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#546E7A</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="rippleColor">#78909C</item>
    </style>

    <!-- Style des dialogues en mode sombre -->
    <style name="Theme.CataMap.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <!-- Fond du dialogue (existant) -->
        <item name="android:background">@color/dialog_background</item>
        <item name="backgroundTint">@color/dialog_background</item>

        <!-- Couleur du hint "Nom du calque" -->
        <item name="android:textColorHint">#828282</item>
        <!-- Couleur du TITRE du dialog -->
        <item name="android:textColorPrimary">#FFFFFF</item>

        <!-- Couleur des boutons -->
        <item name="buttonBarPositiveButtonStyle">@style/Theme.CataMap.Dialog.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.CataMap.Dialog.NegativeButton</item>
    </style>

    <style name="AboutDialog" parent="Theme.Material3.Dark.Dialog.Alert">
        <item name="android:background">#1a1a1a</item>
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:textColorPrimary">#E0E0E0</item>
        <item name="android:textColorSecondary">#B0B0B0</item>
        <item name="colorPrimary">#FF9800</item>
        <item name="colorAccent">#FF9800</item>
        <item name="android:windowBackground">@drawable/dialog_background_dark</item>
    </style>

    <!-- Style pour bouton "Créer/Renommer" -->
    <style name="Theme.CataMap.Dialog.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#1976D2</item> <!-- Bleu -->
    </style>

    <!-- Style pour bouton "Annuler" -->
    <style name="Theme.CataMap.Dialog.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#757575</item> <!-- Gris -->
    </style>


    <!-- Style du titre de dialogue -->
    <style name="DialogTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#FAFAFA</item>
    </style>

    <!-- Couleurs -->
    <color name="divider_dark">#2C2C2C</color>
    <color name="dialog_background">#1E1E1E</color>
</resources>