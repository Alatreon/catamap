<?xml version="1.0" encoding="utf-8"?>
<!-- Layout principal de l'overlay des outils -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolsOverlayRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false">

    <!-- Bandeau indicateurs en haut (toujours visible) -->
    <include
        android:id="@+id/indicatorBar"
        layout="@layout/tools_indicator_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"/>

    <!-- Conteneur pour les paramètres contextuels -->
    <LinearLayout
        android:id="@+id/contextualParametersContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="72dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@android:color/transparent">

        <!-- Slider épaisseur (dessin) -->
        <LinearLayout
            android:id="@+id/strokeWidthContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#CC000000"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Épaisseur"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/strokeWidthSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="19"
                    android:progress="2"/>

                <TextView
                    android:id="@+id/strokeWidthValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3px"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:minWidth="40dp"
                    android:gravity="end"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Dropdown taille texte -->
        <LinearLayout
            android:id="@+id/textSizeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#CC000000"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taille du texte"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/textSizeSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackground"
                android:spinnerMode="dropdown"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Barre d'outils en bas (toujours visible) -->
    <include
        android:id="@+id/toolBar"
        layout="@layout/tools_button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</FrameLayout>