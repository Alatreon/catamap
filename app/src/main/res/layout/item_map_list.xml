<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp">

    <!-- Nom de la carte -->
    <TextView
        android:id="@+id/mapName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="?android:textColorPrimary"
        android:textStyle="bold"
        tools:text="Carte géologique FDP 2019"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEdit"/>

    <!-- Indicateur carte par défaut -->
    <TextView
        android:id="@+id/defaultIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⭐ Par défaut"
        android:textSize="12sp"
        android:textColor="?android:textColorSecondary"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/mapName"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Bouton Modifier -->
    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="Modifier la carte"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>