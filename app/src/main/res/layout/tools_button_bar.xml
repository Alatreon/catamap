<?xml version="1.0" encoding="utf-8"?>
<!-- Barre d'outils avec 5 boutons -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolBarRoot"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:background="#CC000000"
    android:gravity="center"
    android:weightSum="5">

    <!-- Bouton Texte -->
    <LinearLayout
        android:id="@+id/btnToolText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/iconToolText"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_tool_text"
            android:tint="@android:color/white"
            android:contentDescription="Texte"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texte"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <!-- Bouton Dessin -->
    <LinearLayout
        android:id="@+id/btnToolDraw"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/iconToolDraw"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_tool_draw"
            android:tint="@android:color/white"
            android:contentDescription="Dessin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dessin"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <!-- Bouton Couleur -->
    <LinearLayout
        android:id="@+id/btnToolColor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/iconToolColor"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_tool_color"
            android:tint="@android:color/white"
            android:contentDescription="Couleur"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Couleur"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <!-- Bouton Gomme -->
    <LinearLayout
        android:id="@+id/btnToolEraser"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/iconToolEraser"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_tool_eraser"
            android:tint="@android:color/white"
            android:contentDescription="Gomme"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gomme"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <!-- Bouton Fermer -->
    <LinearLayout
        android:id="@+id/btnToolClose"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/iconToolClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_tool_close"
            android:tint="@android:color/white"
            android:contentDescription="Fermer"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fermer"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</LinearLayout>