<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_gradient_background_old"
    android:padding="24dp">

    <!-- Icône en haut -->
    <ImageView
        android:id="@+id/slideIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/onboarding_icon_description"
        android:tint="@color/onboarding_accent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ic_legal" />

    <!-- Titre -->
    <TextView
        android:id="@+id/slideTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textColor="@color/onboarding_accent"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/slideIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Légalité" />

    <!-- ScrollView pour le contenu -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/slideScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/slideTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Description -->
        <TextView
            android:id="@+id/slideDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/onboarding_text"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.4"
            android:fontFamily="sans-serif"
            tools:text="Cette application est destinée à un usage informatif.\nL'accès à certaines cavités peut être interdit..." />

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
