<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nom de la carte -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom de la carte"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editMapName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sélection de catégorie -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catégorie"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Date d'ajout (lecture seule) -->
        <TextView
            android:id="@+id/labelDateAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date d'ajout"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textDateAdded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="26 décembre 2025"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Section Images -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAGES DE LA CARTE"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- Onglets Light / Dark -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabTextColor="#B0B0B0"
            app:tabSelectedTextColor="#FFFFFF"
            app:tabIndicatorColor="?attr/colorSecondary"/>

        <!-- Contenu des onglets -->
        <FrameLayout
            android:id="@+id/tabContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Onglet Light -->
            <LinearLayout
                android:id="@+id/lightModeContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <Button
                    android:id="@+id/btnSelectLightImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choisir l'image Light"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/textLightImagePath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aucune image"
                    android:textSize="12sp"
                    android:ellipsize="middle"
                    android:maxLines="1"/>

            </LinearLayout>

            <!-- Onglet Dark -->
            <LinearLayout
                android:id="@+id/darkModeContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnSelectDarkImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choisir l'image Dark"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/textDarkImagePath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aucune image"
                    android:textSize="12sp"
                    android:ellipsize="middle"
                    android:maxLines="1"/>

            </LinearLayout>

        </FrameLayout>

        <!-- Carte par défaut -->
        <CheckBox
            android:id="@+id/checkDefaultMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Définir comme carte par défaut"
            android:layout_marginBottom="16dp"/>

        <!-- Boutons d'action -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Ligne 1 : Supprimer -->
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Supprimer"
                android:textColor="@android:color/holo_red_light"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginBottom="8dp"/>

            <!-- Ligne 2 : Annuler + Enregistrer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Annuler"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enregistrer"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>