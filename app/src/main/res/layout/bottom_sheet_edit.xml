<?xml version="1.0" encoding="utf-8"?>
<!-- Le NestedScrollView devient la racine -->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetEdit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:elevation="8dp"
    android:fillViewport="false">
    <!-- fillViewport="false" pour éviter l'étirement -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Drag handle -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bottom_sheet_handle"
            android:alpha="0.5"/>

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical">

            <!-- Titre -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Édition"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"/>

        </LinearLayout>

        <!-- Bouton Outils (CTA principal) -->
        <Button
            android:id="@+id/btnTools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:text="Outils"
            android:textSize="16sp"
            style="@style/Widget.MaterialComponents.Button"/>

        <!-- Section Calques -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical">

            <!-- Titre section -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calques"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"/>

            <!-- Bouton Masquer tous -->
            <Button
                android:id="@+id/btnToggleAllLayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masquer tous"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <!-- Bouton Ajouter -->
            <ImageButton
                android:id="@+id/btnAddLayer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_add"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?android:attr/textColorSecondary"
                android:contentDescription="Ajouter un calque"/>

        </LinearLayout>

        <!-- Liste des calques -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/layersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingBottom="24dp"
            android:clipToPadding="false"/>

        <!-- Message liste vide -->
        <TextView
            android:id="@+id/emptyStateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Veuillez ajouter un calque via le bouton +"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>